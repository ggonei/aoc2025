{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "cobc",
      "args": [
        "-o",
        "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}",
        "-x",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "${workspaceFolder}/${relativeFileDirname}/${fileBasenameNoExtension}",
      "group": "build",
      "dependsOn": "Build"
    }
  ]
}
